<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imagenAnime"
        android:layout_width="266dp"
        android:layout_height="201dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombreAnime"
        android:layout_width="423dp"
        android:layout_height="33dp"
        android:layout_marginStart="11dp"
        android:text="@string/nombre_del_anime"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imagenAnime"
        app:layout_constraintStart_toStartOf="@+id/imagenAnime"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/generoAnime"
        android:layout_width="423dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:text="@string/g_nero"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nombreAnime" />

    <TextView
        android:id="@+id/estudiosAnime"
        android:layout_width="423dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:text="@string/estudios"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/generoAnime" />

</androidx.constraintlayout.widget.ConstraintLayout>